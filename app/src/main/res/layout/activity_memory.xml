<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp">

        <!--Fila 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn00"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="0"/>
            <ImageButton
                android:id="@+id/btn0A"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="1"/>
            <ImageButton
                android:id="@+id/btn0B"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="2"/>
            <ImageButton
                android:id="@+id/btn0C"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="3"/>
        </TableRow>


        <!--Fila 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn004"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="0"/>
            <ImageButton
                android:id="@+id/btn0A5"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="1"/>
            <ImageButton
                android:id="@+id/btn0B6"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="2"/>
            <ImageButton
                android:id="@+id/btn0C7"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="3"/>
        </TableRow>

        <!--Fila 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn008"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="0"/>
            <ImageButton
                android:id="@+id/btn0A9"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="1"/>
            <ImageButton
                android:id="@+id/btn0B10"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="2"/>
            <ImageButton
                android:id="@+id/btn0C11"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="3"/>
        </TableRow>

        <!--Fila 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn0012"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="0"/>
            <ImageButton
                android:id="@+id/btn0A13"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="1"/>
            <ImageButton
                android:id="@+id/btn0B14"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="2"/>
            <ImageButton
                android:id="@+id/btn0C15"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_column="3"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnReiniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Reiniciar">
            </Button>

            <Button
                android:id="@+id/btnSalir"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Salir">
            </Button>

        </LinearLayout>



    </TableLayout>


</LinearLayout>